@model IEnumerable<Projeto_Final.Models.Categoria>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<div class="container-criando">
    <p class="criando">
        <a asp-action="Create" class="criando">Create New</a>
    </p>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CategoriaName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoriaName)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.CategoriaId" class="btn-editar">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.CategoriaId" class="btn-detalhes">Detalhes</a> |
                    <a asp-action="Delete" asp-route-id="@item.CategoriaId" class="btn-delete">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
