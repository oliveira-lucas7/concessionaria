@model Projeto_Final.Models.Venda
@{
    Layout = null; // ["Title"] = "Impressão";
}

<link rel="stylesheet" href="~/css/Lista.css" />

<h1>Impressão venda</h1>

<div>
    <h4>Todos os produtos da venda</h4>
    <hr />
    <dl class="row">
    <div class = "geral">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ValorTotal)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ValorTotal)
        </dd>
    </div>
    <div class="geral">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.VendaName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.VendaName)
        </dd>
    </div>
    <div class="geral">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.cliente)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.cliente.NomeCliente)
        </dd>
    </div>
    <div class="geral">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Vendedor)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Vendedor.NomeVendedor)
        </dd>
    </div>
    <div class="geral">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Pagamento)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Pagamento.FormaPagamento)
        </dd>
    </div>
    </dl>
</div>

<table>
    <thead>
        <tr>
            <th>
                <h3>Produtos da Venda</h3>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ProdutoList)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Produto.MarcaCarro)
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="footer">
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
