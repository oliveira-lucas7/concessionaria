@model IEnumerable<Projeto_Final.Models.Venda>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<div class="container-criando">
    <p class="criando">
        <a asp-action="Create" class="criando">Create New</a>
    </p>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ValorTotal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NomeVenda)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VendaName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.cliente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vendedor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pagamento)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ValorTotal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NomeVenda)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VendaName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cliente.NomeCliente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Vendedor.NomeVendedor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pagamento.FormaPagamento)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn-editar">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn-detalhes">Detalhes</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn-delete">Deletar</a>
                    <a asp-action="ImpressaoVenda" asp-route-id="@item.Id" class="btn-imp">Impressão Venda</a>
            </td>
        </tr>
}
    </tbody>
</table>
